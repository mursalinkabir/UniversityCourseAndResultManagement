@using System
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - University Course Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/jquery.ptTimeSelect.css")" rel="stylesheet"/>

    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Allocate Class", "AllocateClassRoom", "AllocateClass")</li>
                    <li>@Html.ActionLink("Save Teacher", "SaveTeacher", "Teacher")</li>
                    <li>@Html.ActionLink("View Result", "ShowResult", "ViewResult")</li>

                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Course <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Course Assign", "CourseAssign", "Course")</li>
                            <li>@Html.ActionLink("Save Course", "SaveCourse", "Course")</li>
                            <li>@Html.ActionLink("Course Schedule", "CourseSchedule", "CourseSchedue")</li>
                            <li>@Html.ActionLink("View Course", "ViewCourse", "CourseView")</li>
                            <li>@Html.ActionLink("Enroll in Course", "EnrollInACourse", "EnrollCourse")</li>
                        </ul>
                    </li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Department <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Save Department", "SaveDeparment", "Department")</li>
                            <li>@Html.ActionLink("Show Department", "ShowDepartment", "Department")</li>

                        </ul>
                    </li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Student <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Save Student", "SaveStudent", "Student")</li>
                            <li>@Html.ActionLink("Show Student Result", "SaveStudentResult", "StudentResult")</li>

                        </ul>
                    </li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Unassign <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("UnAllocate ClassRoom", "UnallocateClassRoom", "UnallocateClassRoom")</li>
                            <li>@Html.ActionLink("UnAssign Course", "UnassignCourse", "UnassignCourse")</li>

                        </ul>
                    </li>
                    
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="@Url.Content("~/Scripts/jquery-ui.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.ptTimeSelect.js")"></script>
    
</body>
</html>
